<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <script src="https://kit.fontawesome.com/15f7d4a3aa.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="style3.css" />
  <title>Bookers2</title>
</head>

<body>
<% if @book_comment.errors.any? %>
  <%= @book_comment.errors.count %>errors occurred
  <% @book_comment.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<%= flash[:notice] %>


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user %>
      <%= render 'books/list', book: @book_new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-hover table-inverse">
        <tbody>
          <% if @user.id == current_user.id %>
              <td><%= link_to user_path(@book.user) do %><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
                <%= @user.name %><% end %></td>
              <td><%= @book.title %></td>
              <td><%= @book.body%></td>
              <td><%= link_to "Edit", edit_book_path(@book),class:"btn btn-sm btn-success edit_book_7295" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete ,class:"btn btn-sm btn-danger destroy_book_7295" ,data: { confirm: '本当に消しますか？' }%></td>
            <% if @book.favorited_by?(current_user) %>
              <td><%= link_to book_favorites_path(@book), method: :delete do %>♥<%= @book.favorites.count %> いいね<% end %></td>
            <% else %>
              <td><%= link_to book_favorites_path(@book), method: :post do %>♡<%= @book.favorites.count %> いいね<% end %></td>
            <% end %>
            <td>コメント件数：<%= @book.book_comments.count %></td>
            <% else %>
            <td><%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %><br>
            <%= @user.name %>
            <% end %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorites_path(@book), method: :delete do %> ♥<%= @book.favorites.count %> いいね<% end %>
            </td>
            <% else %>
            <td>
              <%= link_to book_favorites_path(@book), method: :post do %>
              ♡<%= @book.favorites.count %> いいね
              <% end %>
            </td>
            <% end %>
            <td>コメント数：<%= @book.book_comments.count %></td>
            <% end %>
　　　　　</tbody>
　　　　</table>
　　　 </thead>
　　</table>

  　<div class="comments">
　　　<%= render partial: 'book_comments/index', locals: { book_comments: @book_comments } %>
　　</div>

　　<div class="new-comment">
　　　<%= render partial: 'book_comments/form', locals: { book_comment: @book_comment, book: @book } %>
　　</div>

　　</div>
　</div>
</div>