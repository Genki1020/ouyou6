<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
          <%= form_with model: @book, local:true do |f| %>
        <p>Title<br>
          <%= f.text_field :title %></p>
        <p>Opinion<br>
          <%= f.text_area :body %></p>
          <%= f.submit 'Update Book' ,class:"btn btn-success"%>
          <% end %>
         <p><%= link_to "Show", book_path(@book) %> | <%= link_to "Back", books_path %></p>
    </div>
  </div>
</div>